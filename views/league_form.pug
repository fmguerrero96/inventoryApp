extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') League:
      input#name.form-control(type='text', placeholder='La Liga, Eredivisie etc.' name='name' value=(undefined===league ? '' : league.name))
      label(for='country') Country:
      input#country.form-control(type='text', placeholder='Mexico, England ect.' name='country' value=(undefined===country ? '' : league.country))
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg
